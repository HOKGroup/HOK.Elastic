                @Html.DisplayFor(modelItem => item.WhenCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SettingsJobArgs.JobNotes)
                </td>
